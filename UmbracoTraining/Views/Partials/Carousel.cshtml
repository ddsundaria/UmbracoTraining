@inherits Umbraco.Web.Mvc.UmbracoViewPage

@{

    var carouselSlider = Model.Value<IPublishedContent> ("carouselSlider");
    if(carouselSlider != null) {

    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5 pb-5">
        <div id="header-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach(var carousel in carouselSlider.Children()){

                var typedObject = ((Umbraco.Web.PublishedModels.Carousel)carousel);
                var image = typedObject.BackgroundImage;

                <div class="carousel-item">
                    <img class="w-100" src="@image.Url" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase mb-md-3">@typedObject.SubHeading</h4>
                            <h1 class="display-3 text-white mb-md-4">@typedObject.Heading</h1>
                            <a href="@typedObject.CallToActionLink.Url" class="btn btn-primary py-md-3 px-md-5 mt-2">@typedObject.CallToActionText</a>
                        </div>

                    </div>
                </div>

                }
            </div>
            <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                <div class="btn btn-secondary px-0" style="width: 45px; height: 45px;">
                    <span class="carousel-control-prev-icon mb-n1"></span>
                </div>
            </a>
            <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                <div class="btn btn-secondary px-0" style="width: 45px; height: 45px;">
                    <span class="carousel-control-next-icon mb-n1"></span>
                </div>
            </a>
        </div>
    </div>
    <!-- Carousel End -->
    }
    }
